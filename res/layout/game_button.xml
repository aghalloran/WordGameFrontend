<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_button_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/games_2_row"
    android:clickable="true"
    android:onClick="loadGame">
    
    <FrameLayout 
        android:id="@+id/game_button_group"
        android:layout_alignParentLeft="true"
        android:layout_width="60dp"
        android:layout_height="60dp">
    	<ImageView 
        	android:id="@+id/game_button_icon"
        	android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:padding="10dp"
        	android:src="@drawable/orange_tile"/>
    	<TextView 
    	    android:id="@+id/game_button_round_title"
    	    android:layout_width="60dp"
    	    android:layout_height="50dp"
    	    android:paddingTop="12dp"
    	    android:paddingLeft="12dp"
    	    android:textSize="8dp"
    	    android:text="Round"
    	    />
    	<TextView 
    	    android:id="@+id/game_button_round"
    	    android:layout_width="60dp"
    	    android:layout_height="60dp"
    	    android:padding="20dp"
    	    android:text=""
    	    />
    </FrameLayout>
    <TextView 
        android:id="@+id/game_button_text1"
    	android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:layout_toRightOf="@id/game_button_group"
        android:text=""/>
    
    <TextView 
        android:id="@+id/game_button_text2"
    	android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_below="@id/game_button_text1"
        android:layout_toRightOf="@id/game_button_group"
        android:text=""/>
</RelativeLayout>