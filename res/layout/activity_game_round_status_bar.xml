<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_status_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/user_status_bar_2">
    
    <TextView 
        android:id="@+id/user_game_score"
    	android:textSize="15dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_alignParentLeft="true"/>
    
    <TextView 
        android:id="@+id/user_name"
    	android:textSize="15dp"
    	android:paddingLeft="15dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/user_game_score"/>
      
    <TextView 
        android:id="@+id/user_score"
    	android:textSize="15dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"/>
    
    <TextView 
        android:id="@+id/user_answer"
    	android:textSize="15dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toLeftOf="@id/user_score"/>    
    
</RelativeLayout>